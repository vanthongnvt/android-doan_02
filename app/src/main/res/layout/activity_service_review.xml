<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.TourReviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Đánh giá"
                android:textColor="@color/colorCustomPrimary"
                android:textSize="20sp"
                android:textStyle="bold" />
            <RatingBar
                android:id="@+id/service_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:layout_gravity="left"
                android:isIndicator="true"
                android:stepSize="1"
                style="?android:attr/ratingBarStyleIndicator"
                />
            <TextView
                android:id="@+id/show_dialog_rate_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Viết đánh giá"
                android:textColor="@color/colorCustomPrimary"
                android:textSize="18sp"
                />
            />
        </LinearLayout>

        <ListView
            android:id="@+id/list_view_service_review"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:divider="@null" />
    </LinearLayout>

</FrameLayout>