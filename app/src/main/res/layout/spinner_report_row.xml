<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:padding="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/reportspinner_item_menu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_menu" />

    <ImageView
        android:layout_toRightOf="@+id/reportspinner_item_menu"
        android:padding="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/reportspinner_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_warning" />

    <TextView
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:id="@+id/reportspinner_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reportspinner_item_image"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/reportspinner_item_image"
        android:gravity="center"
        android:text="Báo cáo"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/reportspinner_item_image" />

</RelativeLayout>