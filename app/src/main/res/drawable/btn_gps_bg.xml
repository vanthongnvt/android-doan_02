<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<item>
    <shape
        android:shape="oval" android:padding="10dp">
        <!-- you can use any color you want I used here gray color-->
        <solid android:color="@color/colorCustomPrimaryLighter"/>
        <corners android:radius="5dp"/>
        <stroke
            android:width="1px"
            android:color="#a7a7a7" />
    </shape>
</item>
<item android:drawable="@drawable/ic_gps_fixed_black_24dp"
    android:top="5dp"
    android:bottom="5dp"
    android:left="5dp"
    android:right="5dp"
    />
</layer-list>